<%= form_with model: [@user, @coupon] do |f| %>
    <%= f.label  :Title %>
    <%= f.text_field  :title %><br />
    <%= f.label  :Description %>
    <%= f.text_field :description %><br />
    <%= f.label :Code %>
    <%= f.text_field :code %><br />
    <%= f.label :App %>
    <%= f.select :app, ['Other','Paytm','PhonePe','AmazonPay','Mobikwik','GooglePay','Freecharge','Airtel Money'] %><br />    
    <%= f.label  :image %>
    <%= f.file_field  :coupon_file %><br />
    <%= f.label :Expiry_date %>
    <%= f.date_field :expiry_date %><br />
    <%= f.label :Coins_needed %>
    <%= f.text_field :coins_needed %><br />
    <%= f.fields_for :categories do |c| %>
        <%= c.label :Category %>
        <%= c.collection_select :category_id, Category.order(:name),:id,:name , include_blank: true %><br />
    <% end %>
    <%= f.submit %>
<% end %>
