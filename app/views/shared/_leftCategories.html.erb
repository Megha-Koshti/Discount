<div class="container">
   <div class="row">
     <div class="col-md-3 col-sm-12 gy-4">
       <div class="accordion" id="accordionExample">

         <% @arr.each do |main_category| %>
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingThree<%= main_category.id %>">
              <button
                class="accordion-button collapsed"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#collapseThree<%= main_category.id %>"
                aria-expanded="false"
                aria-controls="collapseThree"
              >
                <%= main_category.name %>
              </button>
            </h2>
            <% main_category.subcategory.each do |s|%>
              <div
                id="collapseThree<%= main_category.id %>"
                class="accordion-collapse collapse"
                aria-labelledby="headingThree<%= main_category.id %>"
                data-bs-parent="#accordionExample"
              >
                <div class="accordion-body" >
                    <% if s.name!= main_category.name %>
                        <strong><%= link_to s.name , category_path(s.id) %></strong>
                    <% end %>
                </div>
              </div>
            <% end %>
          </div>
         <% end %>
       </div>
     </div>
         <%= render 'shared/couponList' %>
   </div>
 </div>
