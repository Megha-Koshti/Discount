
<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add Coupon</p>

            
                <%= form_with model: [@user, @coupon],class:"mx-1 mx-md-4" do |f| %>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.text_field  :title,id:"form3Example1c" ,class:"form-control" ,placeholder: "eg. Save 20% at Discount.com"%>
                        <%= f.label  :Title , class:"form-label" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.text_field :description,id:"form3Example1c" ,class:"form-control" ,placeholder: "eg. Apply and get card in 60 seconds."%>
                        <%= f.label  :Description, class:"form-label" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.text_field  :code ,id:"form3Example1c" ,class:"form-control" ,placeholder: "eg. IMG1000WE" %>
                        <%= f.label  :Code , class:"form-label" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.select :app, ['Other','Paytm','PhonePe','AmazonPay','Mobikwik','GooglePay','Freecharge','Airtel Money'],class:"form-control" %>
                        <%= f.label  :App , class:"form-label" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.file_field  :coupon_file %>
                        <%= f.label  :image , class:"form-label"%>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <%= f.date_field :expiry_date %>
                        <%= f.label :Expiry_date ,class:"form-label"%>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                     <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                     <div class="form-outline flex-fill mb-0">
                        <%= f.text_field :coins_needed %>
                        <%= f.label :Coins_needed, class:"form-label" %>
                     </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                     <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                            <%= f.label :Category, class:"form-label" %>
                            <%= f.collection_select :category_id, Category.order(:name),:id,:name , include_blank: true %>
                  </div>

                  <%# <div class="form-check d-flex justify-content-center mb-5">
                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                    <label class="form-check-label" for="form2Example3">
                      I agree all statements in <a href="#!">Terms of service</a>
                    </label>
                  </div> %>

                    <%= f.submit %>
                <% end %>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
