

<% if flash.any? %>
<% flash.each do |type, msg| %>
<div class="alert alert-primary" role="alert">
<%= msg %>
</div>
<% end %>
<% end %>
<div class="container">
    <div>
        <center>
            <h1>Contact Us</h1>
        </center>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <div id="googlemap" style="width:100%; height:350px;"><iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1839.6721478973916!2d75.89345238466454!3d22.752600644252034!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x396302a99db5fbe7%3A0xd38c2a27557debed!2s4%2F10%2C%20Sceme%20No%2054%2C%20Vijay%20Nagar%2C%20Indore%2C%20Madhya%20Pradesh%20452010!5e0!3m2!1sen!2sin!4v1677501848688!5m2!1sen!2sin"
                    width="500" height="350" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe></div>
        </div>
        <br />
        <div class="col-md-6">
            <%= form_with model: @contact do |f| %>
                <div class="form-group">
                    <%= f.label :Name %>
                        <%= f.text_field :name, class: "form-control" , id: "form-name" ,placeholder: "Name" %>
                </div>
                <br />
                <div class="form-group">
                    <%= f.label "Email Address" %>
                        <%= f.text_field :email, class: "form-control" , id: "form-name" ,placeholder: "Email Address"
                            %>
                </div>
                <br />
                <div class="form-group">
                    <%= f.label "Telephone" %>
                        <%= f.text_field :telephone, class: "form-control" , id: "form-name" ,placeholder: "Telephone"
                            %>
                </div>
                <br />
                <div class="form-group">
                    <%= f.label "Email your Message" %>
                        <%= f.text_field :msg, class: "form-control" , id: "form-name" ,placeholder: "Message" %>
                </div>
                <br />
                <%= f.submit %>
                    <% end %>
        </div>
    </div>
</div>