<section class="vh-100" style="background-color: #9A616D;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Register</span>
                  </div>
                  
                  <div class="form-outline mb-4">
                    <%= f.text_field :name, autofocus: true, id:"form2Example17" ,class:"form-control form-control-lg" %>
                    <label class="form-label" for="form2Example17">Name</label>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,id:"form2Example17" ,class:"form-control form-control-lg" %>
                    <label class="form-label" for="form2Example17">Email address</label>
                  </div>
                
                  <div class="field">
                    <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                     <% end %>
                    <%= f.password_field :password, autocomplete: "new-password" ,id:"form2Example17" ,class:"form-control form-control-lg" %>
                    <label class="form-label" for="form2Example27">Password</label>
                  </div>

                  <div class="field">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,id:"form2Example17" ,class:"form-control form-control-lg" %>
                    <label class="form-label" for="form2Example27">Confirm Password</label>
                  </div>
                
                  <div class="actions">
                    <%= f.submit "Sign up" , class:"btn btn-dark btn-lg btn-block"  %>
                  </div>
                <% end %>
                <%= render "users/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>